<%- include('includes/header'); %>
<%- include('includes/nav'); %>



<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos est√£o abaixo</p>
            
            <%- include('includes/messages'); %>

            <div class="response-table">
                <table class="table my-3">
                    <% if(contatos.length > 0){ %>
                        <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.email %></td>
                                <td><%= contato.telefone %></td>
                                <td><a href="/contato/index/<%= contato._id%>">Editar</td>
                                <td><a class="text-danger" href="/contato/delete/<%= contato._id%>">Excluir</td>
                            </tr>
                        <%})%>
                    <% } else { %>
                        <p class="text-center lead">Nenhum contato foi adicionado!</p>
                    <% } %>
                    
                </table>
            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>